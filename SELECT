SELECT NOPEMAIN,CASE JENIS_KELAMIN
WHEN 'P' THEN 'Perempuan'
WHEN 'L' THEN 'Laki-Laki' END AS JENIS_KELAMIN,
NAMA
FROM PEMAIN
WHERE BERGABUNG > 2000 ;

SELECT NOPEMAIN,CASE JENIS_KELAMIN
WHEN 'P' THEN 'PEREMPUAN'
WHEN 'L' THEN 'LAKI-LAKI' END

FROM PEMAIN ; #PERHATIKAN KALAU BUKAN PAKAI END AS, HASILNYA JADI PANJANG GA JELAS
#SEBAIKNYA PAKAI END AS SUPAYA NAMA DIALIASKAN

SELECT NOPEMAIN, CASE JENIS_KELAMIN
WHEN 'P' THEN 'PEREMPUAN' END AS JENIS_KELAMIN,
NAMA
FROM PEMAIN 
WHERE BERGABUNG > 2000 ; #KALAU ADA YG BELUM DIDEFINISIKAN, CONTOHNYA 'L'
#MAKA 'L' AKAN MENGHASILKAN NULL

SELECT NOPEMAIN, CASE KOTA
WHEN 'Siantar' THEN 0
WHEN 'Medan' THEN 1
WHEN 'Bandung' THEN 2
ELSE 3
END
FROM PEMAIN ; #MASIH BLM NGERTI SIH PAKAI ELSE 3 INI

SELECT NOPEMAIN, BERGABUNG,
CASE
WHEN BERGABUNG < 1995 THEN 'SENIOR'
WHEN BERGABUNG >= 1995 THEN 'JUNIOR' 
END AS KELOMPOK_PEMAIN
FROM PEMAIN
ORDER BY BERGABUNG
;

#PAKAI WHEN THEN WHEN THEN

SELECT NOPEMAIN,(NOPEMAIN),((NOPEMAIN)),(((NOPEMAIN)))
FROM PEMAIN; #PENULISAN SAMA AJA
#DALAM KURUNG ADALAH EKSPRESI SKALAR

SELECT UCASE('DATA')
;

SELECT UCASE(NAMA)
FROM PEMAIN
;

SELECT LCASE(NAMA)
FROM PEMAIN
;

SELECT NOPEMBAYARAN, YEAR(TANGGAL_PEMBAYARAN)
FROM HUKUMAN
WHERE YEAR(TANGGAL_PEMBAYARAN) > 1995 ;

SELECT ROUND(SQRT(MOD(30,7)),0);

SELECT NOPEMAIN, CONCAT(LEFT(INISIAL,1),'.', NAMA)
AS NAMA_BARU
FROM PEMAIN
WHERE LEFT(NAMA,1) = 'R';

SELECT INISIAL, NAMA, COALESCE(NOLIGA,'1')
FROM PEMAIN; #MENGGANTI NULL DENGAN '1' 

SELECT NOPEMAIN, DAYNAME(TANGGAL_LAHIR),
MONTHNAME(TANGGAL_LAHIR), DAYOFYEAR(TANGGAL_LAHIR)
FROM PEMAIN
WHERE NOPEMAIN<10;

SELECT NOPEMAIN,TANGGAL_LAHIR,
ADDDATE(TANGGAL_LAHIR, INTERVAL 7 DAY)
FROM PEMAIN
WHERE DAYNAME(TANGGAL_LAHIR) = 'Saturday' ;

SELECT NOPEMAIN
FROM PEMAIN
LIMIT 3 ;

SELECT NOPEMAIN.PEMAIN
FROM PEMAIN ;

SELECT *
FROM ms_produk
WHERE nama_produk = 'Gantungan Kunci DQLab';

SELECT *
FROM ms_produk
WHERE nama_produk = 'Gantungan Kunci DQLab'
OR nama_produk = 'Tas Travel Organizer DQLab';

SELECT *
FROM ms_produk
WHERE nama_produk = 'Gantungan Kunci DQLab'
AND harga > 50000;





