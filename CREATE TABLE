--SQLite

CREATE TABLE "ANGGOTA_PANITIA" (
	"NOPEMAIN"	INTEGER NOT NULL,
	"TANGGAL_AWAL"	DATE NOT NULL,
	"TANGGAL_AKHIR"	DATE,
	"POSISI"	CHAR(25),
	PRIMARY KEY("NOPEMAIN","TANGGAL_AWAL")
);

CREATE TABLE "HUKUMAN" (
	"NOPEMBAYARAN"	INTEGER NOT NULL,
	"NOPEMAIN"	INTEGER NOT NULL,
	"TANGGAL_PEMBAYARAN"	DATE NOT NULL,
	"JUMLAH"	DECIMAL(7 , 2) NOT NULL,
	PRIMARY KEY("NOPEMBAYARAN")
);

CREATE TABLE "PEMAIN" (
	"NOPEMAIN"	INTEGER NOT NULL,
	"NAMA"	CHAR(25) NOT NULL,
	"INISIAL"	CHAR(5) NOT NULL,
	"TANGGAL_LAHIR"	DATE,
	"JENIS_KELAMIN"	CHAR(1) NOT NULL,
	"BERGABUNG"	SMALLINT NOT NULL,
	"JALAN"	VARCHAR(30) NOT NULL,
	"NORUMAH"	CHAR(4),
	"KODEPOS"	CHAR(6),
	"KOTA"	VARCHAR(30) NOT NULL,
	"NOTELP"	CHAR(15),
	"NOLIGA"	CHAR(4),
	PRIMARY KEY("NOPEMAIN")
);

CREATE TABLE "TIM" (
	"NOTIM"	INTEGER NOT NULL,
	"NOPEMAIN"	INTEGER NOT NULL,
	"DIVISI"	CHAR(10) NOT NULL,
	PRIMARY KEY("NOTIM")
);

CREATE TABLE "PERMAINAN"(
NOPERMAINAN INTEGER NOT NULL,
NOTIM INTEGER NOT NULL,
NOPEMAIN INTEGER NOT NULL,
MENANG INTEGER NOT NULL,
KALAH INTEGER NOT NULL,
PRIMARY KEY("NOPERMAINAN","NOTIM","NOPEMAIN")
);
